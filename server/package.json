{
  "name": "veritas",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "build": "bun build src/index.ts --outfile dist/index.js --target node --format esm --external omise",
    "deploy": "sls deploy",
    "start": "sls offline",
    "test": "bun test",
    "db:push": "bun drizzle-kit push",
    "db:seed": "bun run src/db/seed.ts",
    "db:mock": "bun run src/db/mock.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.2.0",
    "@elysiajs/swagger": "^1.2.2",
    "@supabase/supabase-js": "^2.49.4",
    "aws-lambda": "^1.0.7",
    "drizzle-orm": "^0.42.0",
    "elysia": "^1.2.25",
    "omise": "^0.12.1",
    "pg": "^8.14.1",
    "postgres": "^3.4.5",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.149",
    "@types/node": "^22.14.1",
    "@types/pg": "^8.11.13",
    "bun-types": "^1.2.10",
    "drizzle-kit": "^0.31.0",
    "serverless": "3",
    "serverless-offline": "^14.4.0"
  },
  "module": "src/index.js"
}