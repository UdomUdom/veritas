    "elysia": "^1.2.25",
    "omise": "^0.12.1",
    "pg": "^8.14.1",
    "postgres": "^3.4.5",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/pg": "^8.11.13",
    "bun-types": "^1.2.9",
    "drizzle-kit": "^0.30.6",
    "tsx": "^4.19.3"
  },
  "module": "src/index.js"
